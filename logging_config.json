{
    "version": 1,
    "propagate": false,
    "disable_existing_loggers": false,
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "INFO",
            "stream": "ext://sys.stdout"
        },
        "main_file":{
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "logs/fastapi_app.log",
            "formatter": "detailed",
            "level": "INFO",
            "maxBytes": 1048576,
            "backupCount": 3,
            "mode": "a",
            "encoding": "utf-8"
        },
        "celery_file":{
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "logs/celery_app.log",
            "formatter": "detailed",
            "level": "INFO",
            "maxBytes": 1048576,
            "backupCount": 3,
            "mode": "a",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "src": {
            "handlers": ["stdout","main_file"],
            "level": "INFO",
            "propagate": false
        },
        "src.tasks": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        },
        "fastapi": {
            "handlers": ["stdout","main_file"],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn": {
            "handlers": ["stdout","main_file"],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn.access": {
            "handlers": ["stdout","main_file"],
            "level": "INFO",
            "propagate": false
        },
        "celery": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        },
        "celery.task": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        },
        "celery.worker": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        },
        "celery.beat": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        },
        "celery.redirected": {
            "handlers": ["stdout","celery_file"],
            "level": "INFO",
            "propagate": false
        }
    },
    "formatters": {
        "standard": {
            "format": "%(asctime)s :: [%(levelname)s] :: %(name)s :: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "detailed": {
            "format": "%(asctime)s :: %(levelname)8s :: %(name)35s :: %(module)10s:%(lineno)3d :: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    }
}